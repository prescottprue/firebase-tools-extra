{
  "name": "firebase-tools-extra",
  "version": "0.5.3",
  "description": "Extra methods for firebase-tools which support using a service account.",
  "main": "lib/index.js",
  "module": "lib/index.js",
  "jsnext:main": "lib/index.js",
  "types": "./index.d.ts",
  "bin": {
    "firebase-extra": "./bin/firebase-tools-extra"
  },
  "files": [
    "bin",
    "cmds",
    "lib",
    "lib-esm",
    "index.d.ts"
  ],
  "scripts": {
    "clean": "rimraf lib lib-esm",
    "build": "npm run build:lib && npm run build:esm && npm run build:typefile",
    "build:typefile": "tsc --declaration --outFile index.d.ts --emitDeclarationOnly",
    "build:lib": "tsc",
    "build:esm": "tsc && tsc -m es6 --outDir lib-esm",
    "watch": "npm run build:commonjs -- --watch",
    "watch:es": "npm run build:es -- --watch",
    "lint": "eslint src/**/*.ts --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "npm run clean && npm run build"
  },
  "keywords": [
    "firebase-tools",
    "firebase",
    "cli"
  ],
  "dependencies": {
    "firebase-admin": "^8.9.2",
    "lodash": "^4.17.15",
    "yargs": "^14.2.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.9.0",
    "@types/yargs": "^15.0.3",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jsdoc": "^22.0.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "typescript": "^3.8.3"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prescottprue/firebase-tools-extra.git"
  },
  "bugs": {
    "url": "https://github.com/prescottprue/firebase-tools-extra/issues"
  },
  "author": {
    "name": "Prescott Prue",
    "url": "https://github.com/prescottprue"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write"
    ],
    "*.{ts}": [
      "eslint --fix"
    ]
  }
}
