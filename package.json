{
  "name": "firebase-tools-extra",
  "version": "0.3.0",
  "description": "Extra methods for firebase-tools which support using a service account.",
  "main": "lib/index.js",
  "module": "lib/index.js",
  "jsnext:main": "lib/index.js",
  "types": "./index.d.ts",
  "bin": {
    "firebase-extra": "./bin/firebase-tools-extra"
  },
  "files": [
    "bin",
    "cmds",
    "lib",
    "lib-esm",
    "index.d.ts"
  ],
  "scripts": {
    "clean": "rimraf lib lib-esm",
    "build": "npm run build:lib && npm run build:esm && npm run build:typefile",
    "build:typefile": "tsc --declaration --outFile index.d.ts --emitDeclarationOnly",
    "build:lib": "tsc",
    "build:esm": "tsc && tsc -m es6 --outDir lib-esm",
    "emulate": "firebase serve --only firestore",
    "test:full": "concurrently \"npm run emulate\" \"wait-port -o silent 8080 && npm run test\"",
    "test": "ts-mocha -p ./tsconfig.json test/**/*.spec.ts --exit",
    "watch": "npm run build:commonjs -- --watch",
    "watch:es": "npm run build:es -- --watch",
    "lint": "eslint src/**/*.ts --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "npm run clean && npm run build",
    "prepush": "npm run lint"
  },
  "keywords": [
    "firebase-tools",
    "firebase",
    "cli"
  ],
  "dependencies": {
    "firebase-admin": "^8.7.0",
    "lodash": "^4.17.15",
    "yargs": "^14.2.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.144",
    "@types/node": "^12.11.1",
    "@types/yargs": "^13.0.2",
    "@typescript-eslint/eslint-plugin": "^2.4.0",
    "@typescript-eslint/parser": "^2.4.0",
    "cross-env": "^6.0.3",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsdoc": "^17.0.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.9",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "typescript": "^3.7.3"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prescottprue/firebase-tools-extra.git"
  },
  "bugs": {
    "url": "https://github.com/prescottprue/firebase-tools-extra/issues"
  },
  "author": {
    "name": "Prescott Prue",
    "url": "https://github.com/prescottprue"
  }
}
